{% extends 'base.html.twig' %}
{% block title %}Adhérant{% endblock %}
{% block js %}
	<!-- Theme JS files -->
	<script src="{{ asset('global_assets/js/plugins/tables/datatables/datatables.min.js') }}"></script>
	<script src="{{ asset('global_assets/js/plugins/forms/selects/select2.min.js') }}"></script>

	
	<script src="{{ asset('global_assets/js/demo_pages/datatables_basic.js') }}"></script>
{% endblock %}
{% block body %}
<div class="content">
   <div class="card-header header-elements-inline" style="background-color:RoyalBlue">
						<h3 class="card-title" style="color:white">Adhérant</h3>
						<div class="header-elements">
							<a class="btn btn-primary" href="{{ path('app_adherant_new') }}" style="width:100px" align="right" ><i class="icon-add"></i> Ajouter</a>
	                	</div>
					</div>

   

   <table class="table datatable-basic dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Numtel</th>
                <th>Email</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adherant in adherants %}
            <tr>
                <td>{{ adherant.id }}</td>
                <td>{{ adherant.nom }}</td>
                <td>{{ adherant.prenom }}</td>
                <td>{{ adherant.numtel }}</td>
                <td>{{ adherant.email }}</td>
                <td>{{ adherant.adresse }}</td>
                <td>
                    <a class="btn btn-primary"href="{{ path('app_adherant_edit', {'id': adherant.id}) }}"style="width:100px"><i class="icon-pencil"></i> Modifier</a>
                {{ include('adherant/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
